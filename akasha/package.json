{
  "name": "@glossick/akasha",
  "version": "0.9.23",
  "description": "A minimal, developer-friendly GraphRAG library with multi-tenant support",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "scripts",
    "README.md",
    "LICENSE",
    "docs"
  ],
  "scripts": {
    "build": "tsc && node scripts/fix-esm-imports.js",
    "prepublishOnly": "bun run build",
    "postinstall": "bun scripts/postinstall-verify-lbug.cjs",
    "test": "bun test",
    "test:integration": "bun test --timeout 60000 src/__tests__/integration",
    "test:unit": "bun test src/__tests__ --exclude integration",
    "demo": "bun run scripts/demo.ts",
    "test:script": "bun run scripts/test-integration.ts",
    "cleanup": "bun run scripts/cleanup-test-data.ts"
  },
  "keywords": [
    "graphrag",
    "knowledge-graph",
    "neo4j",
    "llm",
    "rag",
    "multi-tenant",
    "graph-database",
    "semantic-search",
    "vector-search"
  ],
  "author": {
    "name": "Glossick",
    "url": "https://glossick.io"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Glossick/akasha.git",
    "directory": "akasha"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "lbug": "0.12.2",
    "neo4j-driver": "^6.0.1",
    "openai": "^6.8.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "trustedDependencies": [
    "lbug"
  ],
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
